        <Label Content="Tipo de Equipo:" HorizontalAlignment="Left" Margin="15,229,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtTipoEquipo" HorizontalAlignment="Left" Height="23" Margin="15,254,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Marca del Equipo:" HorizontalAlignment="Left" Margin="15,282,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtMarcaEquipo" HorizontalAlignment="Left" Height="23" Margin="15,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Modelo del Equipo:" HorizontalAlignment="Left" Margin="15,336,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtModeloEquipo" HorizontalAlignment="Left" Height="23" Margin="15,362,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Descripción:" HorizontalAlignment="Left" Margin="15,390,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtDescripcionEquipo" HorizontalAlignment="Left" Height="54" Margin="15,429,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Falla según Cliente:" HorizontalAlignment="Left" Margin="225,229,0,0" VerticalAlignment="Top" Width="330"/>
        <TextBox x:Name="txtFallaCliente" HorizontalAlignment="Left" Height="54" Margin="225,254,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330"/>
        <Label Content="Repuestos:" HorizontalAlignment="Left" Margin="225,313,0,0" VerticalAlignment="Top" Width="330"/>
        <TextBox x:Name="txtRepuestos" HorizontalAlignment="Left" Height="54" Margin="225,339,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330"/>
        <Label Content="Informe:" HorizontalAlignment="Left" Margin="225,398,0,0" VerticalAlignment="Top" Width="330"/>
        <TextBox x:Name="txtInforme" HorizontalAlignment="Left" Height="54" Margin="225,429,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330"/>
        <TextBox x:Name="txtCosto" HorizontalAlignment="Left" Height="23" Margin="461,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="94"/>
        <DatePicker x:Name="dtpFechaEntrega" HorizontalAlignment="Left" Margin="450,12,0,0" VerticalAlignment="Top" Width="105"/>
        <Label Content="Datos del Cliente" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="40" Width="315"/>
        <Label Content="Datos del Equipo" HorizontalAlignment="Left" Margin="15,194,0,0" VerticalAlignment="Top" Height="35" Width="210"/>
        <Button x:Name="btnAgregarServicio" Content="Agregar" HorizontalAlignment="Left" Margin="461,107,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancelarServicio" Content="Cancelar" HorizontalAlignment="Left" Margin="461,134,0,0" VerticalAlignment="Top" Width="75"/>
        <DatePicker x:Name="dtpFechaIngreso" HorizontalAlignment="Left" Margin="255,12,0,0" VerticalAlignment="Top" Width="105" IsEnabled="False"></DatePicker>
        <Label Content="Costo:" HorizontalAlignment="Left" Margin="407,194,0,0" VerticalAlignment="Top" Width="49"/>
        

    </Grid>
</UserControl>
